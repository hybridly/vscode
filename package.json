{
	"publisher": "innocenzi",
	"name": "vscode-hybridly",
	"displayName": "Hybridly",
	"version": "0.1.3",
	"private": true,
	"preview": true,
	"packageManager": "pnpm@7.8.0",
	"description": "Visual Studio Code extension for Hybridly",
	"keywords": [
		"hybridly",
		"inertia",
		"inertiajs",
		"vue",
		"laravel",
		"vite"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/hybridly/vscode"
	},
	"funding": "https://github.com/sponsors/innocenzi",
	"author": "Enzo Innocenzi <enzo@innocenzi.dev>",
	"homepage": "https://github.com/hybridly/vscode#readme",
	"bugs": {
		"url": "https://github.com/hybridly/vscode/issues"
	},
	"sponsor": {
		"url": "https://github.com/sponsors/innocenzi"
	},
	"categories": [
		"Other"
	],
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"icon": "res/icon.png",
	"galleryBanner": {
		"color": "#252525",
		"theme": "dark"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"activationEvents": [
		"onStartupFinished"
	],
  "contributes": {
    "configuration": {
      "title": "Hybridly",
      "properties": {
        "hybridly.componentMethods": {
          "type": ["string"],
          "default": [],
          "description": "Additional methods which first parameter should link to page components."
        },
        "hybridly.routeMethods": {
          "type": ["string"],
          "default": [],
          "description": "Additional methods which first parameter correspond to a route name."
        }
      }
    }
  },
	"scripts": {
		"build": "tsup src/index.ts --external vscode",
		"dev": "nr build --watch",
		"lint": "eslint .",
		"vscode:prepublish": "nr build",
		"publish": "vsce publish --no-dependencies",
		"pack": "vsce package --no-dependencies",
		"test": "vitest",
		"typecheck": "tsc --noEmit",
		"release": "bumpp && nr publish"
	},
	"devDependencies": {
		"@antfu/ni": "^0.17.2",
		"@innocenzi/eslint-config": "^0.14.0",
		"@types/node": "^18.11.18",
		"@types/vscode": "^1.74.0",
		"bumpp": "^8.2.1",
		"eslint": "^8.32.0",
		"esno": "^0.16.3",
		"pnpm": "^7.25.0",
		"rimraf": "^4.1.0",
		"tsup": "^6.5.0",
		"typescript": "^4.9.4",
		"vite": "^4.0.4",
		"vitest": "^0.27.2",
		"vsce": "^2.15.0"
	}
}
